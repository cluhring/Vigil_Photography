<% provide(:title, "Contact Page") %>
<h1>Contact</h1>
<div class="row container-fluid body">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@guest, :url => contact_path, html: {multipart: true}) do |f| %>
      <%= render 'shared/guest_error_messages' %>
      <p>
        <%= f.label :name, "Full Name" %><br>
        <%= f.text_field :name, required: true, class: 'form-control' %>
      </p>
      <p>
        <%= f.label :email, "Email Address" %><br>
        <%= f.email_field :email, required: true, class: 'form-control' %>
      </p>
      <p>
        <%= f.label :message, "Message" %><br>
        <%= f.text_area :message, required: true, rows: 8, class: 'form-control' %>
      </p>
      <p>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </p>
    <% end %>
    <script>
      $("#new_guest").validate();
    </script>
  </div>

  <div class="col-md-6 col-md-offset-3">
    <div class="social">
    <a href="https://twitter.com/vigilcjr"><%= image_tag "twitter.png", :class => "img-responsive", :alt => "twitter logo" %></a>
    <a href="https://www.facebook.com/acevigiljr"><%= image_tag "facebook.png", :class => "img-responsive", :alt => "facebook logo" %></a>
    </div>
  </div>
</div>
